<mvc:View controllerName="com.sap.demo.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    class="sapUiSizeCompact"
    xmlns:m="sap.suite.ui.microchart"
    >
    <App id="app">
        <Page id="page1" title="{i18n>appTitle}">
            <headerContent>
                <Button id="Refresh" type="Emphasized" text="{i18n>home}" class="sapUiSmallMarginEnd" />
            </headerContent>
            <content>

               <!-- Bank Details UI -->
                <core:Fragment id="bankDetailsFragment" fragmentName="com.sap.demo.view.fragments.BankDetails" 
                type="XML" />
               
               <!-- Card Details UI -->
               <core:Fragment id="cardDetailsFragment" fragmentName="com.sap.demo.view.fragments.CardDetails" 
              type="XML" />
             
            </content>
        </Page>
    </App>
</mvc:View>
